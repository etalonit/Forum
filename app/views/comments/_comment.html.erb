<h2>This article has <%= pluralize(@comments.count, "Comment") %></h2>

<% @comments.each do |comment| %>
 <p><b><%= comment.user.email %></b></p>
 <p><%= comment.content %></p>
 <p><%= time_ago_in_words(comment.created_at) %></p>
  <% if current_user == comment.user %>
     <%= link_to 'Delete comment', [comment.article, comment], method: :delete %>
     <%= link_to 'Edit comment', edit_article_comment_path(comment.article, comment) %>
     <% end %>
 <% end %>

 <%= render 'comments/form' %> 