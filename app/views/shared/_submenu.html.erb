<div class="Box2">
	<div class="col-sm text-center" style="margin-top: 10px">
  <%= form_tag articles_path, :method => 'get' do %>
      <input class="form-control form-control" placeholder='<%= t('navbar.articles_search') %>' aria-label="Search" type=<%= text_field_tag :search, params[:search] %>
      <button class="btn btn-outline-light" style="margin-top: 10px;" type="submit_tag"><%= t('navbar.search') %></button>
      <%= link_to t('common.advanced_search'), new_search_path, class:"btn btn-outline-light", style:"margin-top: 10px; Text-decoration: none" %>
    <% end %>
  </div>
  <hr>
<div class="submenu">
	<h5 class="font-weight-bold text-white text-center" style="margin-top: 5px;"><%= t('navbar.categories') %></h5>
	<hr>
	<ul class="nav nav-pills nav-stacked">
		<% Category.roots.each do |category| %>
	    <li class="nav-item">
	    	<%= link_to category.name, category, class: "text-white nav-link #{'active' if current_page? (category_path(category)) || @article.present? && @article.category == category}", style:"Text-decoration: underline;" %>
	    	<%= render 'shared/submenu_category', categories: category.root.descendants.arrange %>
	    <% end %>
	</li>
	</ul>
</div>
</div>