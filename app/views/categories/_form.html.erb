<%= form_for @category do |f| %>
 <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
 </div>

 <div class="form-group">
    <%= f.label :parent_id %>
    <%= f.collection_select :parent_id, @categories, :id, :name, { include_blank: true} %>
  </div>
 
 <div class="form-group">
 	<%= f.submit %>
 </div> 
<% end %>